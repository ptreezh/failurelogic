                satisfaction_gain = amount * 2  # ä¸¥é‡æ•ˆç‡ä¸‹é™
                
            new_state["satisfaction"] = min(100, new_state["satisfaction"] + satisfaction_gain)
            new_state["reputation"] = min(100, new_state["reputation"] + satisfaction_gain // 2)
            
